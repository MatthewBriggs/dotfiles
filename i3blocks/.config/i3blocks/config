#format=

[Uptime]
label=UP
command=uptime | cut -c 11-20 | tr -d ',' | tr -d 'up'
interval=59

[Uptdates]
label=▲
command=apacman -Qu | grep -v ignored | wc -l
interval=59

[Pkgs]
label=PKGS
command=pacman -Q | wc -l
interval=59

[vbox]
label=VBOX
command=vboxmanage list runningvms | wc -l
interval=5
color=#06989a

[memory]
label=MEM
command=/home/matt/.scripts/memory
separator=false
interval=30
color=#00FF00

