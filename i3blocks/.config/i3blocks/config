[wireless]
label=
instance=wlan0
instance=wlp2s0b1
command=/$HOME/.scripts/wifi
color=#998C00
interval=5

[ssid]
command=echo "$(iw dev wlp2s0b1 link | grep SSID | cut -d " " -f2-)"
color=#00FF00
interval=5

[volume]
label=VOL
label=
instance=Master
#instance=PCM
command=/home/matt/.scripts/volume.sh
interval=1
signal=10


[battery]
label=BAT
label=
command=/home/matt/.scripts/battery.sh
interval=10

[time]
command=date '+%a %e %b %Y %I:%M %p'
interval=5
